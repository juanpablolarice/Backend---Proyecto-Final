<div class="vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="col-sm-8 col-md-7 col-lg-5 col-xl-4 p-5 shadow-sm border rounded-3">
        <h2 class="text-center mb-4 text-primary">Iniciar sesión</h2>
        <div class="alert alert-danger" role="alert">
            El usuario o la clave es incorrecta.
        </div>
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control border border-primary" name="email" id="email"  value="">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control border border-primary" name="password" id="password">
            </div>
            <!-- <p class="small"><a class="text-primary" href="forget-password.html">Forgot password?</a></p> -->
            <div class="d-grid">
                <button class="btn btn-primary" type="submit">Ingresar</button>
            </div>
        </form>
        {{#if error}}
            <div class="alert alert-danger mt-3" role="alert">
                {{ error }}
            </div>
        {{/if}}
        {{#if hasMessage}}
            <div class="alert alert-danger mt-3" role="alert">
                {{ message }}
            </div>
        {{/if}}
        <div class="mt-3 d-grid">
            <a href="/auth/github" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
